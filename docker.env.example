# Docker Compose Environment Configuration
# Copy this file to .env in the project root to customize settings

# Network Configuration
NETWORK_NAME=nycdob-network
NETWORK_MTU=1450

# Application Service
STREAMLIT_PORT=8501
APP_MEMORY_LIMIT=4G
APP_CPU_LIMIT=2.0
APP_MEMORY_RESERVATION=2G
APP_CPU_RESERVATION=1.0

# Neo4j Database Service
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_AUTH=neo4j/password
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_URI=bolt://neo4j:7687

# Neo4j Memory Configuration (simplified for compatibility)
NEO4J_PAGECACHE_SIZE=2G
NEO4J_HEAP_INITIAL_SIZE=2G
NEO4J_HEAP_MAX_SIZE=4G

# Neo4j Container Resource Limits
NEO4J_MEMORY_LIMIT=8G
NEO4J_CPU_LIMIT=2.0
NEO4J_MEMORY_RESERVATION=4G
NEO4J_CPU_RESERVATION=1.0

# Neo4j Plugins
NEO4J_PLUGINS=["apoc"]

# Jupyter Lab Service
JUPYTER_PORT=8889
JUPYTER_MEMORY_LIMIT=4G
JUPYTER_CPU_LIMIT=2.0
JUPYTER_MEMORY_RESERVATION=2G
JUPYTER_CPU_RESERVATION=1.0

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s

# Data Directories (local bind mounts)
DATA_DIR=./data
NOTEBOOKS_DIR=./notebooks

# General Settings
RESTART_POLICY=unless-stopped

# Note: Neo4j data, logs, import, and plugins now use Docker managed volumes
# instead of local bind mounts for better portability and fewer permission issues 