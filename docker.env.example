# =============================================================================
# NYC DOB Data Exploration - Docker Compose Configuration
# Copy this file to .env and modify values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Neo4j Database Configuration
# -----------------------------------------------------------------------------

# Authentication
NEO4J_USER=neo4j
NEO4J_PASSWORD=secure_password_change_me
NEO4J_AUTH=neo4j/secure_password_change_me

# Network Configuration
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_URI=bolt://neo4j:7687

# Memory Configuration (Minimum 16GB for production)
NEO4J_HEAP_INITIAL_SIZE=8G
NEO4J_HEAP_MAX_SIZE=16G
NEO4J_PAGECACHE_SIZE=8G

# Resource Limits
NEO4J_MEMORY_LIMIT=20G
NEO4J_CPU_LIMIT=4.0
NEO4J_MEMORY_RESERVATION=16G
NEO4J_CPU_RESERVATION=2.0

# Performance Settings
NEO4J_TRANSACTION_TIMEOUT=60s
NEO4J_TRANSACTION_CONCURRENT_MAX=1000
NEO4J_QUERY_CACHE_SIZE=1000

# Plugins
NEO4J_PLUGINS=["apoc"]

# -----------------------------------------------------------------------------
# Application Service Configuration
# -----------------------------------------------------------------------------

# Network Configuration
STREAMLIT_PORT=8501

# Resource Limits
APP_MEMORY_LIMIT=4G
APP_CPU_LIMIT=2.0
APP_MEMORY_RESERVATION=2G
APP_CPU_RESERVATION=1.0

# -----------------------------------------------------------------------------
# Jupyter Lab Configuration
# -----------------------------------------------------------------------------

# Network Configuration
JUPYTER_PORT=8889

# Resource Limits
JUPYTER_MEMORY_LIMIT=8G
JUPYTER_CPU_LIMIT=4.0
JUPYTER_MEMORY_RESERVATION=4G
JUPYTER_CPU_RESERVATION=2.0

# -----------------------------------------------------------------------------
# Volume Configuration
# -----------------------------------------------------------------------------

# Neo4j Data Directories
NEO4J_DATA_DIR=./docker-volumes/neo4j/data
NEO4J_LOGS_DIR=./docker-volumes/neo4j/logs
NEO4J_IMPORT_DIR=./docker-volumes/neo4j/import
NEO4J_PLUGINS_DIR=./docker-volumes/neo4j/plugins

# Application Data
DATA_DIR=./data
NOTEBOOKS_DIR=./notebooks

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------

NETWORK_NAME=nycdob-network
NETWORK_MTU=1450

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------

# Restart Policy
RESTART_POLICY=unless-stopped

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Environment Mode
ENVIRONMENT=development
COMPOSE_PROJECT_NAME=nycdob-data-exploration 